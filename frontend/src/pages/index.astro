---
import Layout from '../layouts/Layout.astro';
import { HomePageContent } from '../components/HomePageContent';
import { fetchBooks, fetchShows } from '../api/client';
import type { Book, Show } from '../types';

// Fetch data (equivalent to loader function)
let books = { results: [], count: 0 };
let shows: Show[] = [];

try {
  const [booksData, showsData] = await Promise.all([
    fetchBooks(1, 8).catch(() => ({ results: [], count: 0 })),
    fetchShows().catch(() => [])
  ]);
  
  books = booksData;
  shows = Array.isArray(showsData) 
    ? showsData 
    : showsData.results || [];
} catch (error) {
  console.error('Error fetching data:', error);
  // Use empty data as fallback
}
---

<Layout
  title="Radio Reads â€” Books from Radio Shows"
  description="Discover books discussed, reviewed and recommended on BBC Radio 4 and NPR. Author interviews, reviews and prize-winners from Front Row, Free Thinking, Bookclub, A Good Read and Fresh Air."
  pathname={Astro.url.pathname}
>
  <HomePageContent books={books} shows={shows} client:load />
</Layout>

