# Django Settings
DEBUG=1
SECRET_KEY=local-dev-secret-key-change-me
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,web

# Database Settings (PostgreSQL required)
SQL_ENGINE=django.db.backends.postgresql
SQL_DATABASE=paperwaves_dev
SQL_USER=paperwaves_dev_user
SQL_PASSWORD=paperwaves_dev_password
SQL_HOST=db
SQL_PORT=5432

# Celery Settings
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379

# AI / Book Extraction
BOOK_EXTRACTION_MODE=ai
ANTHROPIC_API_KEY=your-api-key-here

# Disable scheduled scraping in development
PAUSE_SCRAPING=True
